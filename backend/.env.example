# Server Configuration (No trailing slashes in URLs)
PORT=3008
NODE_ENV=production
CORS_ORIGIN=https://your-updater-domain.com

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public
# If using Docker Compose, the host is usually the database service name (e.g., 'db')
DATABASE_URL="postgresql://user:password@db:5432/shimatsu_updater?schema=public"

# Redis (For job queues and caching)
# If using Docker Compose, the host is usually the redis service name (e.g., 'redis')
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security - JWT Auth
# Generate a strong secret key (e.g., openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Pterodactyl API Configuration
# URL of your Pterodactyl Panel (https://panel.example.com) - No trailing slash
PTERODACTYL_URL=https://panel.example.com
# Client API Key (Create in Account Settings -> API Credentials)
PTERODACTYL_API_KEY=ptlc_YOUR_CLIENT_API_KEY_HERE

# Encryption Key (Must be exactly 32 parsable characters for AES-256)
# Used for encrypting sensitive data in the database if needed
ENCRYPTION_KEY=CHANGE_THIS_TO_EXACTLY_32_CHAR_RANDOM_KEY!!!

# Scheduler Settings
ENABLE_SCHEDULER=true

# Bulk Update Configuration
# Delay in milliseconds between starting updates for plugins to avoid rate limiting
BULK_UPDATE_DELAY_MS=10000

# File Access Mode
# 'direct' = Read/write plugin files directly from disk (recommended, no API rate limits)
# 'api' = Use Pterodactyl API for file operations (slower, rate limited)
FILE_ACCESS_MODE=direct

# Path to Pterodactyl server volumes on the host machine
# Only used when FILE_ACCESS_MODE=direct. PPU must run on the same machine as Wings.
VOLUMES_PATH=/var/pterodactyl/volumes

